<?xml version="1.0"?>
<hivemq>

    <listeners>
        <tcp-listener>
            <port>1883</port>
            <bind-address>0.0.0.0</bind-address>
        </tcp-listener>
    </listeners>

    <anonymous-usage-statistics>
        <enabled>true</enabled>
    </anonymous-usage-statistics>
	
	<client-event-history>
        <enabled>true</enabled>
         <!-- 7 days -->
    </client-event-history>
	
	<mqtt>
	    <session-expiry>
            <max-interval>4294967295</max-interval> <!-- ~ 130 years -->
        </session-expiry>

        <keep-alive>
            <allow-unlimited>true</allow-unlimited>
            <max-keep-alive>65535</max-keep-alive>
        </keep-alive>
		<retained-messages>
            <enabled>true</enabled>
        </retained-messages>
		 <max-queued-messages>10</max-queued-messages>
	</mqtt>

</hivemq>